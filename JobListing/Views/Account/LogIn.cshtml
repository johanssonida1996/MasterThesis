@model LogInViewModel

@{
    ViewData["Title"] = "User Login";
}



<!-- start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row fullscreen d-flex align-items-center justify-content-center ">
            <div class="banner-content col-lg-4 login-form-div">
                <form id="account" method="post" class="serach-form-area">
                    <div class="row justify-content-center form-wrap login-form">
                        <h3>Logga in</h3>
                        <br>
                        <div class="input-group-icon mt-10 own-input login-cols">
                            <div class="icon"><i class="fa fa-user" aria-hidden="true"></i></div>
                            <input asp-for="Email" type="text" placeholder="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'" class="single-input">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="input-group-icon mt-10 own-input login-cols">
                            <div class="icon"><i class="fa fa-lock" aria-hidden="true"></i></div>
                            <input asp-for="Password" type="password" placeholder="Lösenord" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Lösenord'" class="single-input">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="switch-wrap d-flex justify-content-between login-wrap">
                            <div class="primary-checkbox">
                                <input asp-for="RememberMe" type="checkbox" id="rememb1">
                                <label for="rememb1"></label>
                            </div>
                            <p>Kom ihåg mig</p>
                        </div>
                        <div class="form-cols">
                            <div class="submit-user-form">
                                <button type="submit" class="genric-btn primary submit-user radius">Logga in</button>
                                @*<button type="submit" class="btn btn-primary">Log in</button>*@
                            </div>
                        </div>
                        <div class="login-form-end">
                            <p>Inte medlem? <br> Tryck <a asp-controller="Account" asp-action="Register">HÄR</a> för att registrera dig</p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
