@model RegisterViewModel

@{
    ViewData["Title"] = "User Register";
    var roles = (List<IdentityRole>)ViewData["roles"];
}

<!-- start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row fullscreen d-flex align-items-center justify-content-center ">
            <div class="banner-content col-lg-4 login-form-div">
                <form method="post" class="serach-form-area">
                    <div class="row justify-content-center form-wrap login-form">
                        <h3>Registrera</h3>
                        <br>
                        <div class="input-group-icon mt-10 own-input login-cols">
                            <div class="icon"><i class="fa fa-user" aria-hidden="true"></i></div>
                            <input asp-for="Email" type="text" placeholder="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'" class="single-input">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="input-group-icon mt-10 own-input login-cols">
                            <div class="icon"><i class="fa fa-lock" aria-hidden="true"></i></div>
                            <input asp-for="Password" type="password" placeholder="Lösenord" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Lösenord'" class="single-input">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="input-group-icon mt-10 own-input login-cols">
                            <div class="icon"><i class="fa fa-lock" aria-hidden="true"></i></div>
                            <input asp-for="ConfirmPassword" type="password" placeholder="Upprepa Lösenord" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Upprepa Lösenord'" class="single-input">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="input-group-icon mt-10 login-cols">
                            <div class="icon"><i class="fa fa-id-card-o" aria-hidden="true"></i></div>
                            <div class="form-select" id="default-select">
                                <select asp-for="Role" asp-items='new SelectList(roles, "Name")'>
                                    <option>Jag är:</option>
                                </select>
                            </div>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <div class="form-cols login-cols">
                            <div class="submit-user-form">
                                <button type="submit" class="genric-btn primary submit-user radius">Registrera</button>
                            </div>
                        </div>
                        <div class="login-form-end">
                            <p>Redan medlem? <br> Tryck <a asp-controller="Account" asp-action="LogIn">HÄR</a> för att logga in</p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
     </div>
</section>
<!-- End banner Area -->
