@model WorkerListViewModel

@{
    ViewData["Title"] = "Home Page";
}

<!-- start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row fullscreen d-flex align-items-center justify-content-center">
            <div class="banner-content col-lg-12">
                <h1 class="text-white">
                    <span>1500+</span> Arbetssökande publiserades förra veckan
                </h1>
                <form asp-controller="Home" asp-action="Index" method="post" enctype="multipart/form-data">
                    <div class="row justify-content-center form-wrap">
                        <div class="col-lg-4 form-cols">
                            <input asp-for="SearchString" type="text" placeholder="Vad söker du efter?" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Vad söker du efter?'" class="single-input">
                        </div>
                        <div class="col-lg-3 form-cols" >
                            <div class="default-select" id="default-selects">
                                <select asp-for="CurrentCity" asp-items='(new SelectList(Model.CityList, "Value", "Text"))'>
                                    <option>Stad</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-3 form-cols">
                            <div class="default-select" id="default-selects2">
                                <select asp-for="CurrentCategory" asp-items='new SelectList(Model.CategoryList, "Value", "Text")'>
                                    <option>Branch</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-2 form-cols">
                            <button type="submit" class="btn btn-info">
                                <span class="lnr lnr-search lnr-magnifier"></span> Sök
                            </button>
                        </div>
                    </div>
                </form>
                <p class="text-white"> <span>Sök via taggar:</span> Teknik, Utvecklare, Sjukvård, IT</p>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- Start features Area -->
