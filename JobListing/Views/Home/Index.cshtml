<!-- End feature-cat Area -->
<!-- Start post Area -->
<section class="post-area section-gap">
    <div class="container">
        <div class="row justify-content-center d-flex">
            <div class="col-lg-8 post-list">
                <ul class="cat-list">
                    @foreach (var worktype in Model.WorkTypeList)
                    {
                        <li><a asp-controller="Home" asp-action="Index" asp-route-worktype="@worktype.Value">@worktype.Text</a></li>
                    }

                </ul>

                <div>

                    @*<partial name="_TestPartial" />*@

                    @foreach (var worker in Model.Workers)
                    {
                        <partial name="_card" model="worker" />
                    }
                </div>

                <a class="text-uppercase loadmore-btn mx-auto d-block" href="category.html">Visa fler</a>

            </div>
            <div class="col-lg-4 sidebar">
                <div class="single-slidebar">
                    <h4>Arbetssökande Efter Stad</h4>
                    <ul class="cat-list">

                        @foreach (var city in Model.CityList)
                        {
                            <li>
                                <a class="justify-content-between d-flex" asp-controller="Home" asp-action="Index"
                                   asp-route-city="@city.Text"><p>@city.Text</p><span>@Model.Workers.Where(x => x.City.CityName == city.Text).ToList().Count</span></a>
                            </li>
                        }
                    </ul>
                </div>

                <div class="single-slidebar">
                    <h4>Populära Annonser</h4>
                    <div class="active-relatedjob-carusel">
                        @if (Model != null)
                        {
                            @foreach (var worker in Model.PopularWorkers)
                            {

                                <partial name="_singleSlidebarCard" model="worker" />
                            }
                        }

                    </div>
                </div>

                <div class="single-slidebar">
                    <h4>Arbetssökande Efter Kategori</h4>
                    <ul class="cat-list">
                        @foreach (var category in Model.CategoryList)
                        {
                            <li>
                                <a class="justify-content-between d-flex" asp-controller="Home" asp-action="Index"
                                   asp-route-category="@category.Text"><p>@category.Text</p><span>@Model.Workers.Where(x => x.Category.CategoryName == category.Text).ToList().Count</span></a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End post Area -->
<!-- Start callto-action Area -->
<section class="callto-action-area section-gap" id="join">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content col-lg-9">
                <div class="title text-center">
                    <h1 class="mb-10 text-white">Registrera dig redan idag, det är helt gratis!</h1>
                    <p class="text-white">
                        När du registerar dig som företagare hos oss får du full tillgång till information och kontaktuppgifter, <br>
                        När du registerar dig som arbetssökande hos oss får du möjlighet att ladda upp en profil så att företag kan hitta dig!
                    </p>
                    <a class="primary-btn" asp-controller="Account" asp-action="Register">Jag är Arbetssökande</a>
                    <a class="primary-btn" asp-controller="Account" asp-action="Register">Jag är företag</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End calto-action Area -->
